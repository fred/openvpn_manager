<h3> <%= @title = "Editing User: #{@user.email}" %> </h3>

<% semantic_form_for @user, :url => { :action => "update" } do |form| %>
  <%= form.error_messages %>
  <%= render :partial => "/users/inputs", :locals => { :form => form } %>
  <% form.buttons do %>
    <%= form.commit_button "Save" %>
  <% end %>
<% end %>
