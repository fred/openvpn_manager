<div class="box larger">
  <h3><%= t("login")%></h3>

  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :login, t("login") %><br />
      <%= f.text_field :login, :size => 22, :autofocus => "autofocus" %>
    </p>
    <p>
      <%= f.label :password, t("password") %><br />
      <%= f.password_field :password, :size => 22 %>
    </p>
    <p>
      <%= f.check_box :remember_me %> <%= f.label :remember_me, t("remember_me") %>
    </p>
    <p>
      <%= f.submit t("login") %>
    </p>
  
  <% end %>
</div>