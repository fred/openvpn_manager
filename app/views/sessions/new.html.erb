<h3>Login</h3>

<% semantic_form_for :session, :url => session_path do |form| %>
  <% form.inputs do %>
    <%= form.input :email, :size => 16 %>
    <%= form.input :password, :as => :password %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Sign in" %>
  <% end %>
<% end %>

<p><%= link_to "Forgot password?", new_password_path %></p>

